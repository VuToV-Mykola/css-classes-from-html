{
  "name": "css-classes-from-html",
  "displayName": "CSS Classes from HTML - Figma Integration",
  "description": "üé® –ê–≤—Ç–æ–º–∞—Ç–∏—á–Ω–∞ –≥–µ–Ω–µ—Ä–∞—Ü—ñ—è CSS –∑ HTML —Ç–∞ —ñ–Ω—Ç–µ–≥—Ä–∞—Ü—ñ—è –∑ Figma –¥–∏–∑–∞–π–Ω–∞–º–∏",
  "version": "0.0.7",
  "publisher": "VuToV-Mykola",
  "author": {
    "name": "VuToV Mykola",
    "email": "vutov_nikola@icloud.com"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "css",
    "html",
    "figma",
    "style-generation",
    "design-to-code",
    "automation",
    "web-development"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-classes.showMenu",
        "title": "CSS Classes: Show Menu",
        "icon": "$(symbol-color)"
      },
      {
        "command": "css-classes.quickGenerate",
        "title": "CSS Classes: Quick Generate",
        "icon": "$(zap)"
      },
      {
        "command": "css-classes.fullGenerate",
        "title": "CSS Classes: Full Generate with Figma",
        "icon": "$(rocket)"
      },
      {
        "command": "css-classes.openConfig",
        "title": "CSS Classes: Open Configuration",
        "icon": "$(gear)"
      },
      {
        "command": "css-classes.repeatLast",
        "title": "CSS Classes: Repeat Last Generation",
        "icon": "$(history)"
      }
    ],
    "keybindings": [
      {
        "command": "css-classes.showMenu",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && resourceExtname == .html"
      },
      {
        "command": "css-classes.quickGenerate",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && resourceExtname == .html"
      },
      {
        "command": "css-classes.repeatLast",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .html",
          "command": "css-classes.showMenu",
          "group": "cssClasses"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .html",
          "command": "css-classes.showMenu",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CSS Classes from HTML",
      "properties": {
        "cssClasses.includeReset": {
          "type": "boolean",
          "default": true,
          "description": "–í–∫–ª—é—á–∏—Ç–∏ CSS reset —Å—Ç–∏–ª—ñ"
        },
        "cssClasses.includeComments": {
          "type": "boolean",
          "default": true,
          "description": "–î–æ–¥–∞–≤–∞—Ç–∏ –∫–æ–º–µ–Ω—Ç–∞—Ä—ñ –≤ –∑–≥–µ–Ω–µ—Ä–æ–≤–∞–Ω–∏–π CSS"
        },
        "cssClasses.optimizeCSS": {
          "type": "boolean",
          "default": true,
          "description": "–û–ø—Ç–∏–º—ñ–∑—É–≤–∞—Ç–∏ –∑–≥–µ–Ω–µ—Ä–æ–≤–∞–Ω–∏–π CSS"
        },
        "cssClasses.generateResponsive": {
          "type": "boolean",
          "default": true,
          "description": "–ì–µ–Ω–µ—Ä—É–≤–∞—Ç–∏ –∞–¥–∞–ø—Ç–∏–≤–Ω—ñ —Å—Ç–∏–ª—ñ"
        },
        "cssClasses.defaultMode": {
          "type": "string",
          "default": "minimal",
          "enum": [
            "minimal",
            "maximum",
            "production"
          ],
          "description": "–†–µ–∂–∏–º –≥–µ–Ω–µ—Ä–∞—Ü—ñ—ó –∑–∞ –∑–∞–º–æ–≤—á—É–≤–∞–Ω–Ω—è–º"
        },
        "cssClasses.figmaToken": {
          "type": "string",
          "default": "",
          "description": "Figma API Token (–∑–±–µ—Ä—ñ–≥–∞—î—Ç—å—Å—è –±–µ–∑–ø–µ—á–Ω–æ)",
          "scope": "application"
        }
      }
    },
    "colors": [
      {
        "id": "cssClasses.decorationBackground",
        "description": "Background decoration color for CSS classes",
        "defaults": {
          "dark": "#007ACC22",
          "light": "#007ACC22",
          "highContrast": "#007ACC44"
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:html",
    "onCommand:css-classes.showMenu"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node build.js",
    "watch": "node build.js --watch",
    "test": "node ./test/run-tests.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VuToV-Mykola/css-classes-from-html"
  },
  "bugs": {
    "url": "https://github.com/VuToV-Mykola/css-classes-from-html/issues"
  },
  "homepage": "https://github.com/VuToV-Mykola/css-classes-from-html#readme",
  "license": "MIT"
}
