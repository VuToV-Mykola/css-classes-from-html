{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Main",
      "program": "${workspaceFolder}/main.js",
      "args": ["${input:figmaKey}", "${input:htmlFile}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run UI Server",
      "program": "${workspaceFolder}/frontend/server.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/test/run-tests.js"
    }
  ],
  "inputs": [
    {
      "id": "figmaKey",
      "type": "promptString",
      "description": "Enter Figma file key"
    },
    {
      "id": "htmlFile",
      "type": "promptString",
      "description": "Enter HTML file path",
      "default": "examples/example.html"
    }
  ]
}
